{
  "manifest_version": 3,
  "name": "Network Request Logger",
  "version": "1.0",
  "description": "Logs all network requests and their status codes in real-time",
  "permissions": [
    "webRequest",
    "webNavigation",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}